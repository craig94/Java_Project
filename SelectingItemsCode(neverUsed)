    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
  
        
        //////////////////////// DEFINING ALL ITEMS /////////////////////////
        
        Items newspaper = new Items("Newspaper", "Last weeks newspaper.", "You read through the paper and found out  a week ago extra-terrestrial beings invaded earth and their intentions are unknown.", false, false, 5, 5, 2, 3);

        Items phone = new Items("Mobile phone", " A brick and a half of a phone - looks scratched but still usable.", "You tried to use the phone although there is some it to call (story line) but there is interference affecting its signal!", false, false, 3, 6, 3, 3);

        Items key1 = new Items("Master KEY", "A unique key forged in the darkest corner of the earth that can be used to open any door.", "You used the Master key to unlock the door - the door is now unlocked. (code to set door boolean to true orsomething)", false, false, 4, 4, 2, 2);

        Items crowBar = new Items("Crowbar", "Could be used to bust open some doors - probably anydoor...", "You used the crowbar to bust open the door. The door is no longer locked.", false, false, 6, 2, 2, 4);

        Items flareGun = new Items("Flare gun", "A small firearm thats loaded to shoot a flare - better save this for when the time is right to use this!", "You pulled the trigger and shot the flare into the dark sky - its intense bright light soars and lights up the area above you.", false, false, 6, 6, 4, 3);

        Items creditCard = new Items("Credit Card", "Somebody must of lost this.", "AIN'T NOBODY GOT TIME TO USE A CREDIT CARD IN THIS SITUATION, YOU 'BOUT TO DIE FOOL!", false, false, 3, 6, 3, 5);

        Items crisps = new Items("Crisps", "A tasty looking packet of crisps.", "You ate the crisps... Damn they tasted good, just what you needed after waking up.", false, false, 2, 3, 4, 5);

        Items beer = new Items("Beer", "A cold bottle of refreshing beer.", "You drank the beer and feel awesomely revitalised!", false, false, 5,6,4,6);
      ///////////////////////////////////////////////////////////////////////
 ////////////////////////////////////////////////////////////////////////




        String x = jList1.getSelectedValue().toString();

        // could use some sort of loop here since main program has these items in a array.
        // instead atm I am doing if conditions for all of our items. Use this if problem with
        // loop - use this if no time to code a loop for this to be more efficient.

        if (x.equals(newspaper.getName())) {
            String output = new String(newspaper.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(phone.getName())) {
            String output = new String(phone.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(key1.getName())) {
            String output = new String(key1.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(flareGun.getName())) {
            String output = new String(flareGun.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(crowBar.getName())) {
            String output = new String(crowBar.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(creditCard.getName())) {
            String output = new String(creditCard.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(crisps.getName())) {
            String output = new String(crisps.getUse());
            jTextArea2.setText(output);
        } else if (x.equals(beer.getName())) {
            String output = new String(beer.getUse());
            jTextArea2.setText(output);
        }
        
        Applet.newAudioClip(http://www.wavsource.com/snds_2013-03-31_1591433520274290/sfx/door_creak2.wav).play();
    }                                        

    
